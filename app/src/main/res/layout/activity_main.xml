<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/btEscribirMemoriaSD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btEscribirMemoriaInterna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribir Memoria Interna"
        app:layout_constraintBottom_toTopOf="@+id/btLeerMemoriaInterna"
        app:layout_constraintTop_toBottomOf="@+id/btEscribirMemoriaSD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btEscribirMemoriaSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribir Memoria SD"
        app:layout_constraintBottom_toTopOf="@+id/btEscribirMemoriaInterna"
        app:layout_constraintTop_toBottomOf="@+id/et1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btLeerMemoriaInterna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer Memoria Interna"
        app:layout_constraintBottom_toTopOf="@+id/btLeerMemoriaSD"
        app:layout_constraintTop_toBottomOf="@+id/btEscribirMemoriaInterna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btLeerMemoriaSD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer Memoria SD"
        app:layout_constraintBottom_toTopOf="@+id/btLeerFicheroRecursos"
        app:layout_constraintTop_toBottomOf="@+id/btLeerMemoriaInterna"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btLeerFicheroRecursos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leer Fichero Recursos"
        app:layout_constraintBottom_toTopOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/btLeerMemoriaSD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Sin texto aÃºn"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLeerFicheroRecursos" />
</androidx.constraintlayout.widget.ConstraintLayout>